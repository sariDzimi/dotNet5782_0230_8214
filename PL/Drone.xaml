<Window x:Class="PL.Drone"
        x:Name="PLDrone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Drone" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="local:DronesList">
            <Setter Property="Background"
              Value= "#FFA6B748" />
        </Style>
        <Style x:Key="commonStyle"
           TargetType="Control" >
            <Setter Property="FontSize"
              Value="15" />
            <Setter Property="FontFamily"
              Value="Consolas" />
            <Setter Property="FontWeight"
              Value="Bold" />
        </Style>
        <Style TargetType="Label"
           BasedOn="{StaticResource commonStyle}">
            <Setter Property="Background"
              Value= "#FF17BF26" />
            <Setter Property="Foreground"
              Value="Black" />
        </Style>


        <Style TargetType="ComboBox"
           BasedOn="{StaticResource commonStyle}">
            <Setter Property="Background"
              Value= "#FF7791EA" />
            <Setter Property="Foreground"
              Value="Black" />
        </Style>
        <Style TargetType="ListView">
            <Setter Property="Background"
              Value= "#FFDADFF1" />
            <Setter Property="Foreground"
              Value="#FF08089B" />
            <Setter Property="FontSize"
              Value="20" />
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,-34,0">
        <Grid x:Name="AddDrone"  Visibility="Hidden" HorizontalAlignment="Left" Width="464" Margin="239,10,0,-10">
            <Grid.RowDefinitions>
                <RowDefinition Height="90*"/>
                <RowDefinition Height="127*"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="IdInput" HorizontalAlignment="Left" Margin="126,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Height="30"/>
            <Label Content="id drone:" HorizontalAlignment="Left" Margin="27,16,0,0" VerticalAlignment="Top" Height="30" Width="100"/>
            <ComboBox x:Name="WeightSelector" HorizontalAlignment="Left" Margin="127,85,0,0" VerticalAlignment="Top" Width="157" Height="30" />
            <Label Content="max weight" HorizontalAlignment="Left" Margin="27,85,0,0" VerticalAlignment="Top" Height="30" Width="100"/>
            <TextBox x:Name="ModelInput" HorizontalAlignment="Center" Margin="126,145,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Height="30" />
            <Label Content="model" HorizontalAlignment="Left" Margin="27,145,0,0" VerticalAlignment="Top" Height="30" Width="100"/>
            <TextBox x:Name="numberOfStationInput" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Margin="258,22,180,0" Grid.Row="1" TextChanged="numberOfStationInput_TextChanged"/>
            <Label Content="number of stasion for first chaging" HorizontalAlignment="Left" Margin="27,22,0,0" VerticalAlignment="Top" Height="30" Width="231" Grid.Row="1" />

            <Button Content="Add" HorizontalAlignment="Left" Margin="105,116,0,0" VerticalAlignment="Top" Height="32" Width="91" Click="Button_Click" Grid.Row="1"/>

        </Grid>

        <Grid x:Name="Actions" Visibility="Visible" HorizontalAlignment="Center" Margin="-21,0,-247,-10">
            <Grid HorizontalAlignment="Center" >
                <!--<Button Content="close" HorizontalAlignment="Left" Margin="703,381,0,0" VerticalAlignment="Top" Height="27" Width="87" Click="ButtonClick_Close"/>-->
                <Button x:Name="sendDroneToCharge" Content="send drone for charging" HorizontalAlignment="Left" Margin="498,74,0,0" VerticalAlignment="Top" Click="Button_Click_sendDroneToCharge" Height="37" Width="276"/>
                <Button x:Name="sendDroneForDelivery" Content="send drone for delivery" HorizontalAlignment="Left" Margin="498,24,0,0" VerticalAlignment="Top" Click="Button_Click_sendDroneForDelivery" Height="32" Width="276"/>
                <Button x:Name="colectParcel" Content="colect parcel" HorizontalAlignment="Left" Margin="498,182,0,0" VerticalAlignment="Top" Click="Button_Click_colectParcel" Height="39" Width="276"/>
                <Button x:Name="supllyParcel" Content="suplly parcel" HorizontalAlignment="Left" Margin="498,124,0,0" VerticalAlignment="Top" Click="Button_Click_supllyParcel" Height="37" Width="276"/>
                <Label Content="id :" Margin="32,26,1017,388"/>
                <TextBox x:Name="idDroneL"  IsReadOnly="True" Margin="80,26,622,388" RenderTransformOrigin="0.5,0.5">
                    <TextBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBox.RenderTransform>
                </TextBox>
                <Label Content="model :" Margin="28,74,1021,333"/>
                <TextBox x:Name="modelDroneL"  Margin="79,74,622,333" ></TextBox>
                <Label Content="Battery :" Margin="28,118,989,289"/>
                <TextBox x:Name="ButteryDroneL"  IsReadOnly="True" Margin="113,118,622,289"></TextBox>
                <Label Content="MaxWeight :" Margin="28,166,972,241"/>
                <TextBox x:Name="ParcelInDelivery"  IsReadOnly="True" Margin="191,323,622,84"></TextBox>
                <Label Content="DroneStatus :" Margin="28,214,647,193"/>
                <TextBox x:Name="Location"  IsReadOnly="True" Margin="122,271,622,136"></TextBox>
                <Label Content="ParcelAtTransfor :" Margin="29,323,911,84"/>
                <TextBox x:Name="DroneStatusDroneL"  IsReadOnly="True" Margin="153,214,622,193"></TextBox>
                <Label Content="Location :" Margin="28,271,977,136"/>
                <TextBox x:Name="MaxWeight"  IsReadOnly="True" Margin="130,166,622,241"></TextBox>
                <Button Content="update" HorizontalAlignment="Left" Margin="498,243,0,0" VerticalAlignment="Top" Height="33" Width="276" Click="Button_Click_1"/>
            </Grid>
            <Button x:Name="releaseDroneFromCharging" Content="release drone from charging" HorizontalAlignment="Left" Margin="501,291,0,0" VerticalAlignment="Top" Click="Button_Click_releaseDroneFromCharging" Height="32" Width="277"/>

            <Label x:Name="timeCharging" Visibility="Hidden" Content="time of charging"  HorizontalAlignment="Left" Margin="521,323,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="timeOfCharging" Visibility="Hidden"   HorizontalAlignment="Left" Margin="665,324,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="89" Height="27" />
        </Grid>
        <Button Content="x" HorizontalAlignment="Left" Margin="769,5,0,406" Click="Button_Click_2" Width="27" RenderTransformOrigin="1.63,0.089"/>
    </Grid>
</Window>
